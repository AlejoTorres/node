extends ./layout.jade
block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		form(action="/users", method="POST")
			div(class="form-group")
				label(for="email") Email
				input(type="text", name="email", placeholder="Email", id="email", class="form-control")
			div
				label(for="password") Password
				input(type="password", name="password", placeholder="Password", id="password", class="form-control")
			div
				label(for="password_confirm") Password Confirmation
				input(type="password", name="password_confirm", placeholder="Password Confirmation", id="password_confirm", class="form-control")
			div
				label(for="username") Username
				input(type="text", name="username", placeholder="Username", id="username", class="form-control")
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit", value="iniciar sesion", class="btn btn-info")
				div(class="col-xs-12 col-sm-6 text-right")
					a(href="/login") ya tengo cuenta